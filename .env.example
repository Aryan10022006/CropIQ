# Environment Variables for YieldGuard Platform
# Copy this file to .env.local for local development

# Application Configuration
NEXT_PUBLIC_APP_NAME=YieldGuard
NEXT_PUBLIC_APP_URL=https://yieldguard.vercel.app
NEXT_PUBLIC_API_URL=https://api.yieldguard.com

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# Map Configuration (if using external map services)
# NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# Analytics (optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking (optional)
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Database/API Keys (Backend - Keep these secret, never expose in NEXT_PUBLIC_)
# DATABASE_URL=your_database_url
# API_SECRET_KEY=your_secret_key
